generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  password    String
  isAdmin     Boolean      @default(false)
  createdAt   DateTime     @default(now())
  account     Account?
  health      Health?
  records     Record[]
  history     History[]
  medications Medication[]
  orders      Order[]
  posts       Post[]
  role        Role?        @default(PATIENT)
}

enum Role {
  SUPERADMIN
  ADMIN
  PATIENT
  AUTHOR
}

model Record {
  id              Int      @id @default(autoincrement())
  weight          String
  height          String
  lastwhCheck     DateTime
  bloodPressure   String
  lastBpCheckDate DateTime
  userId          Int
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt       DateTime @default(now())
}

model History {
  id        Int      @id @default(autoincrement())
  history   String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  createdAt DateTime @default(now())
}

model Medication {
  id        Int      @id @default(autoincrement())
  label     String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  createdAt DateTime @default(now())
}

model Order {
  id           Int         @id @default(autoincrement())
  medicineName String
  trackingId   String
  status       OrderStatus @default(clinicalreview)
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       Int
  createdAt    DateTime    @default(now())
}

enum OrderStatus {
  clinicalreview
  posted
  delivered
}

model Account {
  id Int @id @default(autoincrement())

  firstName    String
  lastName     String
  phoneNumber  String
  secondEmail  String
  dob          DateTime
  nhsNumber    String?
  address      String
  zipCode      String
  profileImage String?
  userId       Int      @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Health {
  id                    Int      @id @default(autoincrement())
  weight                String
  height                String
  weightHeightCheckDate DateTime
  bpTop                 String
  bpBottom              String
  bpCheckDate           DateTime
  medicalConditions     String
  currentMedicines      String

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model BookingSlot {
  id        Int       @id @default(autoincrement())
  slotDate  DateTime  @db.Date // the calendar day
  startTime String // "09:00"
  endTime   String // "09:10"
  isBooked  Boolean   @default(false)
  bookings  Booking[]

  @@index([slotDate, startTime])
}

model Booking {
  id          Int        @id @default(autoincrement())
  fullName    String
  email       String
  phoneNumber String
  notes       String?
  ocRequest   OcRequest?

  serviceName  String
  providerName String
  nhsService   String
  appointment  DateTime
  createdAt    DateTime @default(now())

  slotId Int?
  slot   BookingSlot? @relation(fields: [slotId], references: [id])

  @@index([slotId])
}

model Post {
  id              String    @id @default(uuid())
  title           String
  postSlug        String    @unique
  shortDesc       String?
  bannerImage     String
  bannerAltText   String?
  metaTitle       String?   @db.VarChar(70)
  metaDescription String?   @db.VarChar(160)
  canonicalUrl    String?
  content         Json
  author          User?     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId        Int?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  isActive        Boolean?
  Comment         Comment[]

  @@index([authorId], name: "author_idx")
}

model Comment {
  id        String   @id @default(uuid())
  name      String
  email     String
  content   String
  approved  Boolean?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  post      Post     @relation(fields: [postId], references: [id])
  postId    String
}

enum OcRequest {
  SAME_OC
  DIFFERENT_OC
}
