generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  isAdmin   Boolean   @default(false)
  createdAt DateTime  @default(now())
  account   Account?
  records   Record[]
  history   History[]
}

model Record {
  id              Int      @id @default(autoincrement())
  weight          String
  height          String
  lastwhCheck     DateTime
  bloodPressure   String
  lastBpCheckDate DateTime
  userId          Int
  user            User     @relation(fields: [userId], references: [id])
  createdAt       DateTime @default(now())
}

model History {
  id        Int      @id @default(autoincrement())
  history   String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
}

model Account {
  id Int @id @default(autoincrement())

  // personal details
  firstName   String
  lastName    String
  phoneNumber String
  secondEmail String
  dob         DateTime
  nhsNumber   String?
  address     String
  zipCode     String

  // Health details
  weight                String
  height                String
  weightHeightCheckDate DateTime
  bpTop                 String
  bpBottom              String
  bpCheckDate           DateTime
  medicalConditions     String
  currentMedicines      String
  profileImage          String?

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])
}

model BookingSlot {
  id        Int       @id @default(autoincrement())
  slotDate  DateTime  @db.Date // the calendar day
  startTime String // "09:00"
  endTime   String // "09:10"
  isBooked  Boolean   @default(false)
  bookings  Booking[]

  @@index([slotDate, startTime])
}

model Booking {
  id          Int       @id @default(autoincrement())
  fullName    String
  email       String
  phoneNumber String
  notes       String?
  ocRequest   OcRequest

  serviceName  String
  providerName String
  nhsService   String
  appointment  DateTime
  createdAt    DateTime @default(now())

  slotId Int?
  slot   BookingSlot? @relation(fields: [slotId], references: [id])

  @@index([slotId])
}

enum OcRequest {
  SAME_OC
  DIFFERENT_OC
}
