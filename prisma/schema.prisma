generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  account   Account?
  records   Record[]
}

model Record {
  id              Int      @id @default(autoincrement())
  weight          String
  height          String
  lastwhCheck     DateTime
  bloodPressure   String
  lastBpCheckDate DateTime
  userId          Int
  user            User     @relation(fields: [userId], references: [id])
}

model Account {
  id Int @id @default(autoincrement())

  // personal details
  firstName   String
  lastName    String
  phoneNumber String
  secondEmail String
  dob         DateTime
  nhsNumber   String?
  address     String
  zipCode     String

  // Health details
  weight                String
  height                String
  weightHeightCheckDate DateTime
  bpTop                 String
  bpBottom              String
  bpCheckDate           DateTime
  medicalConditions     String
  currentMedicines      String

  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])
}
